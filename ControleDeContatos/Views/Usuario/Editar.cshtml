@using ControleDeContatos.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Editar usuário";
}

<div class="text-center">
    <h1 class="display-4">Editar usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"></input>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nome">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="nome">Login</label>
        <input type="text" asp-for="Login" class=" form-control" placeholder="Digite o login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="perfil">Perfil</label>
        <select asp-for="Perfil" class=" form-control">
            <option value="0"> Selecione </option>
            <option value="@PerfilEnum.Admin"> Administrador </option>
            <option value="@PerfilEnum.Padrao"> Padrão </option>
        </select>
    </div>
    <div class="form-group">
        <label for="nome">Senha</label>
        <input type="text" asp-for="Senha" class=" form-control" placeholder="Digite a senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>