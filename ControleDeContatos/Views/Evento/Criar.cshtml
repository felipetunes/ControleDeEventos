@model EventoModel
@{
    ViewData["Title"] = "Criar Evento";
}

<div class="text-center">

    <h1 class="display-4">Criar Evento</h1>

</div>

<form asp-controller="Evento" enctype="multipart/form-data" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <div class="form-group">
        <label for="Local">Local</label>
        <input type="text" asp-for="Local" class="form-control" placeholder="Digite o local">
        @Html.ValidationMessageFor(x => x.Local)
    </div>
    <div class="form-group">
        <label for="Data">Data</label>
        <input type="datetime" asp-for="Data" class="form-control" placeholder="Digite a data">
        @Html.ValidationMessageFor(x => x.Data)
    </div>
    <div class="form-group">
        <label asp-for="Foto" class="control-label"></label>
        <input type="file" name="anexo" asp-for="Foto" class="custom-file-input" id="FLFrontImage"
        onChange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])"/>
        <label class="custom-file-label" for="FLFrontImage" style="display:none">Chosse File</label>
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>
    <img id="FrontImagePrv" src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/ed/Item_sem_imagem.svg/498px-Item_sem_imagem.svg.png" alt="Logo Image" width="150"
        height="150" style="border:1px;margin-top:20px;margin-left:120px;"/>
    <div style="margin-top:20px">
        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary" asp-controller="Evento" asp-action="Index" role="button">Voltar</a>
    </div>

</form>