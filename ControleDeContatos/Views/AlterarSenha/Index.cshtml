@using ControleDeContatos.Enums;
@model AlterarSenhaModel
@{
    ViewData["Title"] = "Alterar senha do usuário";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-sm close-alert" aria-label="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-sm close-alert" aria-label="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>
}
<div class="text-center">
    <h1 class="display-4">Alterar senha do usuário</h1>
</div>

<form asp-controller="AlterarSenha" asp-action="Alterar" method="post">

    <div class="form-group">
        <label for="nome">Senha atual</label>
        <input type="text" asp-for="SenhaAtual" class=" form-control" placeholder="Digite a senha atual">
        @Html.ValidationMessageFor(x => x.SenhaAtual)
    </div>
    <div class="form-group">
        <label for="nome">Nova senha</label>
        <input type="text" asp-for="NovaSenha" class=" form-control" placeholder="Digite a nova senha">
        @Html.ValidationMessageFor(x => x.NovaSenha)
    </div>
    <div class="form-group">
        <label for="nome">Confirme a nova senha</label>
        <input type="text" asp-for="ConfirmarNovaSenha" class=" form-control" placeholder="Digite a confirmação da nova senha">
        @Html.ValidationMessageFor(x => x.ConfirmarNovaSenha)
    </div>
    <div style="margin-top:20px">
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
    </div>

</form>