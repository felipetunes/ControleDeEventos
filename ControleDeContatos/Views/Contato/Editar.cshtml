@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">
  
    <input type="hidden" asp-for="Id"></input>
    <div class="form-group">
    <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class=" form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
  </div>
    <div class="form-group">
        <label for="nome">Email</label>
        <input type="email" asp-for="Email" class=" form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
       <div class="form-group">
          <label for="nome">Celular</label>
        <input type="number" asp-for="Celular" class="form-control" placeholder="Digite o celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>